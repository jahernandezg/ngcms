{
  "name": "backend",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "backend/src",
  "projectType": "application",
  "tags": [],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "webpack-cli build",
        "args": ["--node-env=production"]
      },
  "dependsOn": ["^build"],
      "configurations": {
        "development": { "args": ["--node-env=development"] }
      }
    },
    "serve": {
      "continuous": true,
      "executor": "nx:run-commands",
      "options": {
  "command": "node backend/scripts/dev-serve.cjs"
      }
    },
    "serve-ts": {
      "executor": "nx:run-commands",
      "options": {
  "command": "cross-env TS_NODE_TRANSPILE_ONLY=1 node --loader ts-node/esm backend/src/main.ts"
      }
    },
    "serve-winps": {
      "continuous": true,
      "executor": "nx:run-commands",
      "options": {
        "command": "powershell -NoProfile -Command \"Start-Job { npx webpack --config backend/webpack.config.js --watch } | Out-Null; Start-Sleep -Seconds 1; node dist/backend/main.js\""
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "options": {
        "lintFilePatterns": ["backend/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "backend/jest.config.ts",
        "passWithNoTests": true
      }
    }
  }
}
